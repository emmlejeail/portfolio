---
import BlogCard from "@/components/BlogCard.astro";
import Share from "@/components/Share.astro";
import Disqus from "@/helpers/Disqus";
import { getSinglePage } from "@/lib/contentParser.astro";
import dateFormat from "@/lib/utils/dateFormat";
import similarItems from "@/lib/utils/similarItems";
import { humanize, markdownify, slugify } from "@/lib/utils/textConverter";
import { render } from "astro:content";
import { FaRegClock, FaRegFolder, FaRegUserCircle } from "react-icons/fa";
import ImageMod from "./components/ImageMod.astro";

const COLLECTION_FOLDER = "blog";
const { post } = Astro.props;

const posts = await getSinglePage(COLLECTION_FOLDER);
const similarPosts = similarItems(post, posts);
const { Content } = await render(post);
const { title, description, author, categories, image, date, tags } = post.data;
---

<section class="section pt-7">
  <div class="container">
    <div class="row justify-center">
      <article class="lg:col-10">
        {
          image && (
            <div class="mb-12">
              <ImageMod
                src={image}
                height={500}
                width={1200}
                alt={title}
                class="w-full rounded-2xl shadow-lg"
                format="webp"
              />
            </div>
          )
        }
        
        <!-- Post Header -->
        <header class="mb-12 text-center">
          <h1 set:html={markdownify(title)} class="h1 mb-6 leading-tight" />
          <div class="mx-auto max-w-2xl">
            <p class="text-lg text-text/70 mb-8 leading-relaxed" set:html={markdownify(description)} />
          </div>
          
          <!-- Post Meta -->
          <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-text/60">
            <div class="flex items-center gap-2">
              <FaRegUserCircle className="text-primary" />
              <span>{humanize(author)}</span>
            </div>
            <div class="flex items-center gap-2">
              <FaRegClock className="text-primary" />
              <time>{dateFormat(date)}</time>
            </div>
            <div class="flex items-center gap-2">
              <FaRegFolder className="text-primary" />
              <div class="flex gap-1">
                {
                  categories.map((category: string, index: number) => (
                    <a 
                      href={`/categories/${slugify(category)}`}
                      class="hover:text-primary transition-colors"
                    >
                      {humanize(category)}
                      {index !== categories.length - 1 && ","}
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
        </header>
        <!-- Article Content -->
        <div class="prose prose-lg mx-auto mb-16">
          <Content />
        </div>
        
        <!-- Post Footer -->
        <footer class="border-t border-border/20 pt-8">
          <div class="flex flex-wrap items-center justify-between gap-8">
            <!-- Tags -->
            <div class="flex flex-wrap items-center gap-4">
              <h5 class="text-sm font-semibold text-text/70 uppercase tracking-wide">Tags:</h5>
              <div class="flex flex-wrap gap-2">
                {
                  tags.map((tag: string) => (
                    <a
                      class="inline-flex items-center rounded-full bg-theme-light px-4 py-2 text-sm font-medium text-text/70 transition-all hover:bg-primary hover:text-white dark:bg-darkmode-light dark:hover:bg-darkmode-primary"
                      href={`/tags/${slugify(tag)}`}
                    >
                      #{humanize(tag)}
                    </a>
                  ))
                }
              </div>
            </div>
            
            <!-- Share -->
            <div class="flex items-center gap-4">
              <h5 class="text-sm font-semibold text-text/70 uppercase tracking-wide">Share:</h5>
              <Share
                className="social-icons"
                title={title}
                description={description}
                slug={post.id}
              />
            </div>
          </div>
        </footer>
        <Disqus className="mt-20" client:load />
      </article>
    </div>

    <!-- Related posts -->
    <div class="section pb-0">
      <h2 class="h3 mb-12 text-center">Related Posts</h2>
      <div class="row justify-center">
        {
          similarPosts.map((post) => (
            <div class="lg:col-4 md:col-6 mb-14">
              <BlogCard data={post} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
